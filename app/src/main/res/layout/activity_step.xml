<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/polkadot_background"
    android:orientation="vertical"
    tools:context="com.h.chad.bakingapp.userinterface.StepActivity">


      <TextView
          android:id="@+id/tv_step_error_message"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:visibility="gone" />

      <ScrollView
          android:id="@+id/sv_step_ingredient"
          android:layout_width="match_parent"
          android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rl_step_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_ingredients"
                style="@style/cardItemStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/cardrect"
                android:elevation="2dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_alignParentTop="true"



                />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:paddingBottom="3dp"
        android:layout_below="@+id/tv_ingredients"
        />
        </RelativeLayout>

    </ScrollView>


</LinearLayout>
