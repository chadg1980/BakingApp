<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        style="@style/cardLikeStyle"
        >

        <TextView
            android:id="@+id/tv_quantity"
            style="@style/cardItemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_measure"
            style="@style/cardItemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_quantity"
            android:text="CUP"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_ingredient_item"
            style="@style/cardItemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_measure"
            android:text="Graham Cracker crumbs"
            android:textSize="20sp" />

    </RelativeLayout>
</LinearLayout>